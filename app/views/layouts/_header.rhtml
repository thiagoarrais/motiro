<div style='float: right;'>
    <%= link_to 'English', params.merge(:locale => 'en'), { :id => 'en' } -%>
  | <%= link_to 'PortuguÃªs', params.merge(:locale => 'pt-BR'), { :id => 'pt-BR' } -%>
</div>
<div style="position: relative">
  <% if current_user.nil? then %>
      <%   login_style = nil %>
      <% if flash[:username_used] %>
      <%   login_style = 'border: 2px solid #FAA' %>
        <span style="border: 1px solid #F33; background: #FFA; position: absolute; top: 10px; left: 64px; padding: 0 3px 0 3px">Username unavailable</span>
      <% end %>
      <%= start_form_tag :controller => 'account', :action=> 'login' %>
        <table>
          <tr>
            <td><label for="user_login"><%= 'User'.t -%></label></td>
            <td><label for="user_password"><%= 'Password'.t -%></label></td>
            <td class="password_confirm" style="display: none">
              <label for="user_password_confirmation"><%= 'Confirmation'.t -%></label>
            </td>
            <td>
              <input type="checkbox" id="chk_new_user" name="chk_new_user"
                     onClick="tooglePasswordConfirmation(document.forms[0].chk_new_user.checked)" />
              <%= 'New user?'.t -%>
            </td>
          </tr>
          <tr>
            <td>
              <%= text_field 'user', 'login', :size => 12,
                                              :style => login_style,
                                              :value => flash[:username_used] -%>
            </td>
            <td>
              <%= password_field 'user', 'password', :size => 12 -%>
            </td>
            <td class="password_confirm" style="display: none">
              <%= password_field 'user', 'password_confirmation', :size => 12,
                                 :disabled => true -%>
            </td>
            <td>
              <input type='hidden' name='return_to' value="<%= url_for(params) -%>"/>
              <input class='button'
                     type="submit"
                     name="login"
                     value="Login &#187;" />
            </td>
          </tr>
        </table>
      <%= end_form_tag %>
  <% else %>
    <%= 'Welcome'.t -%>, <%= current_user.login -%>
  <% end %>
</div>
